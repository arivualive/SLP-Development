{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
<link rel="stylesheet" href="{{ asset('css/Reset-password/reset.css') }}">
<link rel="stylesheet" href="{{ asset('css/footer.css') }}">
{% endblock %}

<div class="row">
    <header>
        <div class="header">
            <img class="d-block" src="{{ asset('images/slider/slide_3.jpg') }}" alt="Dashboard">
            <div class="text-inside-header">
                <h1>Mot de passe oublié ?</h1>
                <p>Créez un <br />nouveau mot de passe</p>
            </div>
        </div>
        <div class="dropdown burger">
            <a class="dropdown-item" class="btn btn-secondary dropdown-toggle"
                    href="{{ path('site_index') }}">
                <button class="btn btn-secondary dropdown-toggle"><i class="fa fa-home" style="font-size:24px"></i>
                </button>
            </a>
        </div>
    </header>
    
    <div class="main-title">
        <div class="container">
            <h1>Créer votre nouveau mot de passe</h1>
        </div>
    </div>

    <div class="page">
        <div class="new-psswrd-creation-form container">
            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
            <div class="fields">
                {{ form_widget(form) }}
            </div>
            <div class="new-psswrd-creation-button">
                <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-primary" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="col-12" >
        {% include 'footer.html.twig' %}
    </div>

</div>